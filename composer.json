{
    "name": "penzin/my-smarthome-server",
    "description": "REST API for collecting data from sensors, installed on NodeMCU (ESP8266) device",
    "authors": [
        {
            "name": "Roman Penzin",
            "email": "penzin.r.v@gmail.com"
        }
    ],
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "php-di/php-di": "^7.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6"
    },
    "license": "MIT",
    "scripts": {
        "start": "@php -S 0.0.0.0:8888 -t public"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Penzin\\MySmartHomeServer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Penzin\\MySmartHomeServer\\": "tests"
        }
    }
}
